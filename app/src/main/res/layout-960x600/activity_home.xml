<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="#F3F3F3">




    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/spback" />


        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/downsign" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0 mbps"
            android:layout_toRightOf="@+id/imageView20"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lock"
            />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="0 mbps"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textView22"
            android:src="@drawable/upsign"/>


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView6"
                    android:src="@drawable/upper"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:text="BooM BooM\nVPN"
                    android:gravity="center_horizontal"
                    android:id="@+id/textView23"
                    android:textStyle="bold"

                    android:textColor="@android:color/holo_red_light"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_below="@+id/textView23"
                    android:layout_width="130dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    android:src="@drawable/appicon"
                    android:id="@+id/img_stts"
                    android:layout_centerHorizontal="true"
                    android:layout_height="130dp">
                </ImageView>



                <RelativeLayout
                    android:id="@+id/ShareButtonID"
                    android:layout_above="@+id/Ss"
                    android:layout_marginBottom="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="80dp"
                    android:visibility="visible"
                    android:elevation="1dp"
                    android:background="@drawable/connectedbutton_design"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:background="@drawable/topbuttonclick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ShareiconID"
                                android:src="@drawable/shareicon"
                                android:layout_marginBottom="1dp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                            </ImageView>

                            <TextView
                                android:textSize="15sp"
                                android:text="Share"
                                android:layout_marginTop="1dp"
                                android:textStyle="bold"
                                android:layout_below="@+id/ShareiconID"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content">

                            </TextView>

                        </RelativeLayout>



                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/Ss"
                    android:layout_below="@+id/img_stts"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/EtislateID"
                            android:elevation="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background= "@drawable/threebuttonbackground"
                            android:layout_width="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="45dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:text="Etisalat"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </RelativeLayout>




                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/DuID"
                            android:elevation="1dp"
                            android:background= "@drawable/threebuttonbackground"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="45dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:text="Du"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </RelativeLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:elevation="1dp"
                            android:id="@+id/WifiID"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background= "@drawable/threebuttonbackground"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="45dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:text="Wifi"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>



            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_centerHorizontal="true"
                    android:text="Select your server"
                    android:textColor="#888888"
                    />

                <RelativeLayout
                    android:layout_below="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/board"
                        />


                    <ImageView
                        android:id="@+id/img_flg"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/f_1"
                        />


                    <TextView
                        android:id="@+id/location_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Select"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />


                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/downico"
                        />


                </RelativeLayout>

                <!--          android:id="@+id/play"-->







                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/AdviewTwo"
                    android:src="@drawable/connect_button"/>





                <com.google.android.gms.ads.AdView
                    android:id="@+id/AdviewTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/adView"
                    android:layout_marginBottom="7dp"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-8213826839161591/3458623117"
                    app:layout_constraintEnd_toEndOf="parent">
                </com.google.android.gms.ads.AdView>


                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-8213826839161591/3458623117"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.593"
                    app:layout_constraintStart_toStartOf="parent">
                </com.google.android.gms.ads.AdView>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>